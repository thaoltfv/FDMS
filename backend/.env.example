# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fdms_db
DB_USER=fdms_user
DB_PASSWORD=fdms_password

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=a-very-strong-and-long-secret-for-jwt
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# S3 Storage Configuration (Garage)
S3_ENDPOINT=http://localhost:3900
S3_ACCESS_KEY=fdms_access_key
S3_SECRET_KEY=fdms_secret_key
S3_BUCKET=fdms-files
S3_REGION=us-east-1

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,txt

# Schema Management
ENABLE_AUTO_MIGRATION=true
BACKUP_BEFORE_MIGRATION=true